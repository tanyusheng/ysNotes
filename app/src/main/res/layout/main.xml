<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main"
    android:orientation="vertical" >

    <TextView android:id="@+id/TextView01" 
		android:text="@string/app_name" 
		android:textColor="#000000"
		 android:textSize="17dip"
		android:background="@drawable/title"
		android:gravity="center"
		android:layout_marginTop="24dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	</TextView>
	
    <LinearLayout
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="3dip"
    		android:orientation="horizontal"
    		android:layout_marginLeft="2dip">
    	<ImageButton
    		android:src="@drawable/newone"
    		android:id="@+id/ibmainNew"
    		android:layout_width="53dip"
    		android:layout_height="53dip"
    	/>
    	<ImageButton
    		android:src="@drawable/delete"
    		android:id="@+id/ibmainDel"
    		android:layout_width="53dip"
    		android:layout_height="53dip"
    	/>
    	<ImageButton
    		android:src="@drawable/check"
    		android:id="@+id/ibmainCheck"
    		android:layout_width="53dip"
    		android:layout_height="53dip"
    	/>
    	<ImageButton
    		android:src="@drawable/edit"
    		android:id="@+id/ibmainEdit"
    		android:layout_width="53dip"
    		android:layout_height="53dip"
    	/>
    	<ImageButton
    		android:src="@drawable/deleteall"
    		android:id="@+id/ibmainDelAll"
    		android:layout_width="53dip"
    		android:layout_height="53dip"
    	/>
    	<ImageButton
    		android:src="@drawable/search"
    		android:id="@+id/ibmainSearch"
    		android:layout_width="53dip"
    		android:layout_height="53dip"
    	/>
    </LinearLayout>
	<TextView
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_margin="4dip"
	    android:textColor="#303030"
	    android:text="已有日程"
	    android:textSize="17dip"
    />
   	<LinearLayout
   	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
		

    	android:orientation="horizontal"
    	android:background="@drawable/content"
    	>  	

    	<ListView
    	    android:id="@+id/lvmainSchedule"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:background="@drawable/content"
    	    android:cacheColorHint="#00000000"
    	    android:choiceMode="singleChoice"
    	    android:longClickable="true" />

    </LinearLayout>

</LinearLayout>
